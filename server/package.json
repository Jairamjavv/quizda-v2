{
    "name": "quizda-server",
    "version": "0.1.0",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "dev": "wrangler dev src/worker.ts",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "build:worker": "esbuild src/worker.ts --bundle --platform=neutral --target=es2022 --format=esm --outfile=dist/worker.mjs --sourcemap",
        "build": "npm run build:worker",
        "deploy": "npx wrangler deploy",
        "deploy:db": "npm run cf-typegen && npm run deploy",
        "test": "vitest"
    },
    "dependencies": {
        "@cloudflare/workers-types": "^4.20251115.0",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.44.7",
        "firebase": "^9.0.0",
        "firebase-admin": "^13.6.0",
        "hono": "^4.10.6"
    },
    "devDependencies": {
        "drizzle-kit": "^0.31.7",
        "esbuild": "^0.18.0",
        "typescript": "^5.9.3",
        "vitest": "^1.0.0",
        "wrangler": "^4.47.0"
    }
}
